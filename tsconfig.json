{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": false,
      "declaration": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "typeRoots" : [
        "./src/types",
      ],
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "dist",
    ]
  }
  